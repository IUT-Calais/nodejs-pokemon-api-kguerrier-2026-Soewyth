generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Type {
  id         Int             @id @default(autoincrement())
  name       String          @unique
  pokemons   PokemonCard[]   @relation(name: "PokemonCard_type")
  weaknesses PokemonCard[]   @relation(name: "PokemonCard_weakness")
  attacks    PokemonAttack[] @relation(name: "PokemonAttack_type")
}

model PokemonCard {
  id         Int    @id @default(autoincrement())
  name       String @unique
  pokedexId  Int    @unique
  type       Type   @relation(name: "PokemonCard_type", fields: [typeId], references: [id])
  typeId     Int
  lifePoints Int

  size       Float?
  weight     Float?
  imageUrl   String?
  weakness   Type?   @relation(name: "PokemonCard_weakness", fields: [weaknessId], references: [id])
  weaknessId Int?

  attack   PokemonAttack @relation(name: "PokemonAttack_card", fields: [attackId], references: [id])
  attackId Int
  decks    Deck[] @relation(name: "Deck_cards")
}

model PokemonAttack {
  id       Int           @id @default(autoincrement())
  name     String        @unique
  damages  Int
  type     Type          @relation(name: "PokemonAttack_type", fields: [typeId], references: [id])
  typeId   Int
  pokemons PokemonCard[] @relation(name: "PokemonAttack_card")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  decks    Deck[] @relation(name: "User_decks")
}

model Deck {
  id      Int           @id @default(autoincrement())
  name    String
  cards   PokemonCard[] @relation(name: "Deck_cards")
  owner   User          @relation(name: "User_decks", fields: [ownerId], references: [id])
  ownerId Int

  @@unique([name, ownerId]) // unicity of deck name for a given user
}
