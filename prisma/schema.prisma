generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Type {
  id   Int    @id @default(autoincrement())
  name String @unique
  pokemons PokemonCard[] @relation("PokemonCard_type")
  weaknesses PokemonCard[] @relation("PokemonCard_weakness")
  attacks PokemonAttack[]
}

model PokemonCard {
  id         Int     @id @default(autoincrement())
  name       String  @unique
  pokedexId  Int     @unique
  type       Type    @relation(name : "PokemonCard_type", fields: [typeId], references: [id])
  typeId     Int
  lifePoints Int

  size       Float?
  weight     Float?
  imageUrl   String?
  weakness   Type?   @relation(name: "PokemonCard_weakness", fields: [weaknessId], references: [id])
  weaknessId Int?

  attack     PokemonAttack @relation(fields: [attackId], references: [id])
  attackId   Int
}

model PokemonAttack {
  id       Int           @id @default(autoincrement())
  name     String
  damages  Int
  type     Type          @relation(fields: [typeId], references: [id])
  typeId   Int
  pokemons PokemonCard[]
}


model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
